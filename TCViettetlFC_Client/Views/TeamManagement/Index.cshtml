@{
    Layout = "_LayoutAdmin";
}

<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="actions mb-3">
                            <a onclick="modalEditOrCreate(0)" class="btn btn-success me-2">
                                <i class="fa fa-plus"></i> Thêm mới
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table class="datatable table table-hover table-center mb-0">
                                <thead>
                                   <tr>
                                        <th>Tên cầu thủ</th>
                                        <th>Số áo</th>
                                        <th>Vị trí</th>
                                        <th>Ngày gia nhập</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                     </tr>
                                </thead>
                                <tbody id="tbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="alertBox" style="position: fixed; top: 20px; right: 20px; background-color: orange; color: white; padding: 10px;margin-top: 90px;margin-right:20px; border-radius: 15px; display: none;">
    <strong><i class='bx bx-error' style="color:red"></i></strong> <span id="alertMessage"></span>
</div>

<div id="alertSuccess" style="position: fixed; top: 20px; right: 20px; background-color: lawngreen; color: black; padding: 10px;margin-top: 90px;margin-right:20px; border-radius: 15px; display: none;">
    <strong><i class="bi bi-check-circle" style="color:lawngreen"></i></strong> <span id="alertMessageSuccess"></span>
</div>

<!-- Modal Edit/Create -->
<div class="modal fade" id="modalEditorCreate" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModal">Sửa cầu thủ</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row form-row mt-3">
                    <input type="hidden" id="playerId" class="form-control" readonly>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Tên cầu thủ <span class="required"> *</span></label>
                            <input type="text" id="fullName" class="form-control">
                        </div>
                    </div>

                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Số áo <span class="required"> *</span></label>
                            <input type="number" id="shirtNumber" class="form-control">
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Vị trí <span class="required"> *</span></label>
                            <input type="text" id="position" class="form-control">
                        </div>
                    </div>

                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Ngày gia nhập <span class="required"> *</span></label>
                            <input type="datetime-local" id="joinDate" class="form-control">
                        </div>
                    </div>

                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select style="width:100%" id="status">
                                <option value="1">Hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" onclick="savePlayer()" id="btnNomal" class="btn btn-primary btn-block w-100 mt-4">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete -->
<div class="modal fade" id="delete_modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-content p-2">
                    <h4 class="modal-title">Xác nhận xóa</h4>
                    <input id="playerIdToDelete" type="hidden" />
                    <p class="mb-4">Bạn có muốn xóa cầu thủ này?</p>
                    <button type="button" class="btn btn-primary" id="btnDeletePlayer">Xóa </button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

