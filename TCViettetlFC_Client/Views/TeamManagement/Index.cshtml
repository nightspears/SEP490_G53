@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý đội bóng";
}

<style>
    .modal-body {
        display: flex;
        justify-content: center; /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        height: 100%; /* Đảm bảo chiều cao đủ để căn giữa */
    }

    #cardImg {
        display: flex;
        justify-content: center; /* Căn giữa ảnh theo chiều ngang */
        align-items: center; /* Căn giữa ảnh theo chiều dọc */
        width: 100%;
        max-width: 300px;
        max-height: 300px;
        height: 300px;
    }
</style>
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Quản lý cầu thủ</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <button class="btn btn-success" onclick="openModal(0)">
                                
                                <i class="fa fa-plus"></i> Thêm mới
                                
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>Tên cầu thủ</th>
                                        <th>Số áo</th>
                                        <th>Vị trí</th>
                                        <th>Ngày gia nhập</th>
                                        <th>Ngày rời đội</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="alertBox" style="position: fixed; top: 20px; right: 20px; background-color: orange; color: white; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none;">
    <strong><i class='bx bx-error' style="color:red"></i></strong> <span id="alertMessage"></span>
</div>
<div id="alertSuccess" style="position: fixed; top: 20px; right: 20px; background-color: lawngreen; color: black; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none; z-index:99">
    <strong>
        <i class="bi bi-check-circle" style="color:lawngreen"></i>
    </strong> 
    <span id="alertMessageSuccess" style="font-family: sans-serif;"></span>
</div>

<!-- Player Modal -->
<div class="modal fade" id="modalEditorCreatePlayer" tabindex="-1" aria-labelledby="titleModalPlayer" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModalPlayer"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row form-row mt-3">
                
                <!-- Ảnh đại diện -->
                <div class="card col-12 col-sm-12" id="cardImg" style="width: 100%; max-width: 250px; max-height: 250px; height: 250px">
                    <a href="#" onclick="changeAvatar()">
                        <img id="ImgAvt" class="rounded-5 AvtImg card-img-top"
                             alt="Player Image" src="~/image/imagelogo/avatar_khong_hinh.jpg"
                             style="max-width:250px; height: 100%; max-height:230px; object-fit: cover; width:100%">
                    </a>
                    <!-- Input file để chọn ảnh -->

                    <input type="file" id="avatarInput" accept="image/*" style="display:none;">
                </div>

                <!-- Các trường thông tin cầu thủ -->
                <input type="hidden" id="idCauThu">
                <div class="col-12 mb-3">
                    <label for="tenCauThu" class="form-label">Tên cầu thủ</label>
                    <input type="text" id="tenCauThu" class="form-control" placeholder="Nguyễn Văn A">
                </div>
                <div class="col-12  col-md-4 mb-3">
                    <label for="soAo" class="form-label">Số áo</label>
                    <input type="text" id="soAo" class="form-control" placeholder="01">
                </div>
                <div class="col-12  col-md-4 mb-3">
                    <label for="viTri" class="form-label">Vị trí</label>
                    <input type="text" id="viTri" class="form-control" placeholder="Tiền đạo">
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label>Mùa giải <span class="required"> *</span></label>
                        <select style="width:100%" class="form-control" id="seasonId">
                        </select>
                    </div>
                </div>

                <div class="col-12 col-md-6 mb-3">
                    <label for="ngayGiaNhap" class="form-label">Ngày gia nhập</label>
                    <input type="date" id="ngayGiaNhap" class="form-control">
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label for="ngayRoiDoi" class="form-label">Ngày rời đội</label>
                    <input type="date" id="ngayRoiDoi" class="form-control">
                </div>
                <div class="col-12 mb-3">
                    <label for="description" class="form-label">Mô tả</label>
                    <textarea  id="description" class="form-control" placeholder="Mô tả ngắn ..."></textarea>
                </div>
           
                <div class="col-12 ">
                    <label>Trạng thái</label>
                    <div class="status-toggle d-flex " style="padding-bottom:15px !important">
                        <input type="checkbox" id="statusCauThu" class="check">
                        <label for="statusCauThu" style="height:35px ; width:60px" class="checktoggle">checkbox</label>
                    </div>
                </div>
                <button type="button" class="btn btn-primary btn-block w-100 mt-4" onclick="savePlayer()">Lưu</button>
            </div>
        </div>
    </div>
</div>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="delete_modal_player" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa cầu thủ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa cầu thủ này không?</p>
                <input type="hidden" id="idXoaPlayer">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="btnXoaPlayer">Xóa</button>
            </div>
        </div>
    </div>
</div>


