@{
    Layout = "_LayoutAdmin";
}

<!-- Include necessary scripts -->
<script src="~/admin_assets/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/admin_assets/js/bootstrap.bundle.min.js"></script>
<script src="~/admin_assets/js/chart.morris.js"></script>
<script src="~/admin_assets/js/ckeditor.js"></script>
<script src="~/admin_assets/js/feather.min.js"></script>
<script src="~/admin_assets/js/form-validation.js"></script>
<script src="~/admin_assets/js/jquery-3.6.0.min.js"></script>
<script src="~/admin_assets/js/jquery.maskedinput.min.js"></script>
<script src="~/admin_assets/js/mask.js"></script>
<script src="~/admin_assets/js/moment.min.js"></script>
<script src="~/admin_assets/js/script.js"></script>
<script src="~/admin_assets/adminjs/player.js"></script>

<!-- The rest of your HTML content remains the same -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <button id="btnOpenModel" class="btn btn-primary" onclick="openModal()">
                                <i class="fa fa-plus"></i> Thêm cầu thủ mới
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>Tên cầu thủ</th>
                                        <th>Số áo</th>
                                        <th>Vị trí</th>
                                        <th>Ngày gia nhập</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Player Modal -->
<div class="modal fade" id="modalEditorCreatePlayer" tabindex="-1" aria-labelledby="titleModalPlayer" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModalPlayer"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="idCauThu">
                <div class="mb-3">
                    <label for="tenCauThu" class="form-label">Tên cầu thủ</label>
                    <input type="text" id="tenCauThu" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="soAo" class="form-label">Số áo</label>
                    <input type="text" id="soAo" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="viTri" class="form-label">Vị trí</label>
                    <input type="text" id="viTri" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="ngayGiaNhap" class="form-label">Ngày gia nhập</label>
                    <input type="date" id="ngayGiaNhap" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="statusCauThu" class="form-label">Trạng thái</label>
                    <input type="checkbox" id="statusCauThu" class="form-check-input"> Hoạt động
                </div>
                <!-- Avatar Image Upload -->
                <div class="mb-3">
                    <label for="avatar" class="form-label">Avatar</label>
                    <input type="file" id="avatar" class="form-control" accept="image/*">
                </div>
                <button type="button" class="btn btn-primary" onclick="savePlayer()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="delete_modal_player" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <h4>Xác nhận xóa cầu thủ</h4>
                <input type="hidden" id="idXoaPlayer">
                <p>Bạn có muốn xóa cầu thủ này?</p>
                <button type="button" class="btn btn-danger" id="btnXoaPlayer">Xóa</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

