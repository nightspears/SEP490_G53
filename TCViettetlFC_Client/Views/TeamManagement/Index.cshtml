@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý đội bóng";
}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <button class="btn btn-primary" onclick="openModal(0)">
                                
                                <i class="fa fa-plus"></i> Thêm cầu thủ mới
                                
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>Tên cầu thủ</th>
                                        <th>Số áo</th>
                                        <th>Vị trí</th>
                                        <th>Mô tả</th>
                                        <th>Ngày gia nhập</th>
                                        <th>Ngày rời đội</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="alertBox" style="position: fixed; top: 20px; right: 20px; background-color: orange; color: white; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none;">
    <strong><i class='bx bx-error' style="color:red"></i></strong> <span id="alertMessage"></span>
</div>
<div id="alertSuccess" style="position: fixed; top: 20px; right: 20px; background-color: lawngreen; color: black; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none; z-index:99">
    <strong>
        <i class="bi bi-check-circle" style="color:lawngreen"></i>
    </strong> 
    <span id="alertMessageSuccess" style="font-family: sans-serif;"></span>
</div>

<!-- Player Modal -->
<div class="modal fade" id="modalEditorCreatePlayer" tabindex="-1" aria-labelledby="titleModalPlayer" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModalPlayer"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row form-row mt-3">
                
                <!-- Ảnh đại diện -->
                <div class="card col-12 col-sm-12" id="cardImg" style="width: 100%; max-width: 300px; max-height: 300px; height: 300px">
                    <a href="#" onclick="changeAvatar()">
                        <img id="ImgAvt" class="rounded-5 AvtImg card-img-top"
                             alt="Player Image" src="/image/imagelogo/logoviettel.jpg"
                             style="max-width:260px; height: 100%; max-height:260px; object-fit: cover; width:100%">
                    </a>
                    <!-- Input file để chọn ảnh -->
                    <input type="file" id="avatarInput" accept="image/*" style="display:none;">
                </div>

                <!-- Các trường thông tin cầu thủ -->
                <input type="hidden" id="idCauThu">
                <div class="col-12">
                    <label for="tenCauThu" class="form-label">Tên cầu thủ</label>
                    <input type="text" id="tenCauThu" class="form-control">
                </div>
                <div class="col-12">
                    <label for="soAo" class="form-label">Số áo</label>
                    <input type="text" id="soAo" class="form-control">
                </div>
                <div class="col-12">
                    <label for="viTri" class="form-label">Vị trí</label>
                    <input type="text" id="viTri" class="form-control">
                </div>
                <div class="col-12">
                    <label for="ngayGiaNhap" class="form-label">Ngày gia nhập</label>
                    <input type="date" id="ngayGiaNhap" class="form-control">
                </div>
                <div class="col-12">
                    <label for="ngayRoiDoi" class="form-label">Ngày rời đội</label>
                    <input type="date" id="ngayRoiDoi" class="form-control">
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">Mô tả</label>
                    <input type="text" id="description" class="form-control">
                </div>
                <div class="col-12">
                    <label for="seasons" class="form-label">Mùa Giải</label>
                    <select id="seasonId">
                        <!-- Các lựa chọn sẽ được thêm tại đây -->
                    </select>
                </div>
                <div class="mb-3">
                    <label for="statusCauThu" class="form-label">Trạng thái</label>
                    <input type="checkbox" id="statusCauThu" class="form-check-input"> Hoạt động
                </div>
                <button type="button" class="btn btn-primary btn-block w-100 mt-4" onclick="savePlayer()">Lưu</button>
            </div>
        </div>
    </div>
</div>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="delete_modal_player" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa cầu thủ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa cầu thủ này không?</p>
                <input type="hidden" id="idXoaPlayer">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" id="btnXoaPlayer">Xóa</button>
            </div>
        </div>
    </div>
</div>


