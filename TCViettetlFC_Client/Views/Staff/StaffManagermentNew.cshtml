                                            <input type="hidden" value="@creatorId" id="EditingCreatorId" name="creatorId" />

                                            <div class="row">
                                                <div class="row">
                                                    <div class="col-12 col-sm-4">
                                                        <div class="form-group" onclick="openFileInput()">

