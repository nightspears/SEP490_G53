@model IEnumerable<TicketOrdersViewModel>
@{
    ViewData["Title"] = "Quản lý đơn hàng vé";
    Layout = "_LayoutAdmin";
    
    var path = @ViewContext.HttpContext.Request.Path;
    int currentPage = 1; // Default to 1 if no page is specified in the path

    // Extract current page from path if it matches /Staff/TicketOrders/{page}
    if (path.StartsWithSegments("/Staff/TicketOrders"))
    {
        var segments = path.Value.Split('/');
        if (segments.Length > 3 && int.TryParse(segments[3], out int page))
        {
            currentPage = page;
        }
    }
}
<style>
    /* Pagination styles */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

        .pagination a {
            margin: 0 5px;
            padding: 10px 15px;
            text-decoration: none;
            color: #007bff;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

            .pagination a:hover {
                background-color: #007bff;
                color: white;
            }

        .pagination .active {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        .pagination .disabled {
            color: #ddd;
            pointer-events: none;
        }
</style>
<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Quản lý đơn hàng vé</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if(Model.Any()){
                                <table class="datatable table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Ngày đặt hàng</th>
                                        <th>Tổng giá</th>
                                        <th>Email khách hàng</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var order in Model)
                                    {
                                        <tr>
                                            <td>@order.id</td>
                                            <td>@order.orderDate</td>
                                            <td>@order.totalAmount</td>
                                            <td>@order.customerEmail</td>
                                            <td><a asp-action="TicketOrderDetail" asp-route-id="@order.id">Chi tiết</a></td>
                                        </tr>
                                    }
                                 
                                </tbody>
                            </table>

                                <div class="pagination">
                                    @if (TempData["TotalPages"] != null)
                                    {
                                        int totalPages = (int)TempData["TotalPages"];
                                        int visiblePages = 1; 
                                        if (currentPage > 0)
                                        {
                                            <a href="@Url.Action("TicketOrders", "Staff", new { id = 1 })" class="@(currentPage == 1 ? "active" : "")">1</a>
                                        }

                                        if (currentPage > visiblePages + 2)
                                        {
                                            <span>...</span>
                                        }
                                        for (int i = Math.Max(2, currentPage - visiblePages); i <= Math.Min(totalPages - 1, currentPage + visiblePages); i++)
                                        {
                                            <a href="@Url.Action("TicketOrders", "Staff", new { id = i })" class="@(currentPage == i ? "active" : "")">@i</a>
                                        }
                                        if (currentPage + visiblePages < totalPages - 1)
                                        {
                                            <span>...</span>
                                        }
                                        if (currentPage < totalPages)
                                        {
                                            <a href="@Url.Action("TicketOrders", "Staff", new { id = totalPages })" class="@(currentPage == totalPages ? "active" : "")">@totalPages</a>
                                        }
                                    }
                                </div>
                            }
                            else
                            {
                                <h6>Không có dữ liệu</h6>
                            }

                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
