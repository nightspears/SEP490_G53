@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý đồ đính kèm";
}

<style>
    .position-relative {
        position: relative;
    }

    .change-photo {
        position: absolute;
        top: 38%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        display: none;
    }

    .image-container:hover .change-photo {
        display: block; /* Hiện nút khi hover */
        background-color: rgba(0, 0, 0, 0.3);
    }


    .change-photo-btn {
        border: none;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    select {
        border: 1px solid #ddd;
        box-shadow: none;
        color: #333;
        font-size: 15px;
        width: 100%;
        height: 40px;
        border-radius: 5px;
    }
    .required {
        color: red;
    }

    #cardImg {
        transition: box-shadow 0.3s ease;
        border: none;
        max-height: 300px;
        max-width: 240px;
    }

    #cardImg {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

        #cardImg:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
            transform: scale(1.1);
        }

        #cardImg img {
            transition: all 0.3s ease;
            object-fit: cover;
            border-radius: 10px;
        }

</style>

<link href="~/admin_assets/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
<link href="~/admin_assets/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
<div class="page-wrapper">
    <div class="content container-fluid">

        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Quản lý đồ đính kèm</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="actions mb-3">
                            <a onclick="modalEditOrCreate(0)" class="btn btn-success  me-2">
                                <i class="fa fa-plus"></i> Thêm mới
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table class="datatable table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="0" onchange="CheckAll(this)">
                                            </div>
                                        </th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th class="text-center">Trạng thái hiển thị</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="alertBox" style="position: fixed; top: 20px; right: 20px; background-color: orange; color: white; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none;">
    <strong><i class='bx bx-error' style="color:red"></i></strong> <span id="alertMessage"></span>
</div>
<div id="alertSuccess" style="position: fixed; top: 20px; right: 20px; background-color: lawngreen; color: black; padding: 10px;margin-top: 90px;margin-right :20px; border-radius: 15px; display: none; z-index:99">
    <strong><i class="bi bi-check-circle" style="color:lawngreen"></i></strong> <span id="alertMessageSuccess" style="font-family: sans-serif;"></span>
</div>

<div class="modal fade" id="modalEditorCreate" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModal">Sửa đồ đính kèm</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    <div class="col-md-4 d-flex justify-content-center position-relative image-container">
                    </div>

                    <div class="col-md-4 d-flex justify-content-center position-relative image-container">
                        <div class="card" id="cardImg" style="width: 100%;max-width: 250px;max-height: 250px;height:250px">
                            <a href="#">
                                <img id="ImgAvt" class="rounded-5 AvtImg card-img-top" alt="User Image"
                                     src="~/image/anh_mau_do_an.jpg"
                                     style=" max-width:230px ; height: 100%; max-height:230px; object-fit: cover; width:100%">
                            </a>
                        </div>
                        <i class="fe fe-pencil change-photo" style="font-size:20px"></i>
                        <input type="file" id="fileInputImg" style="display:none;" accept="image/*">
                    </div>

                    <div class="col-md-4 d-flex justify-content-center position-relative image-container">
                    </div>
                </div>



                <div class="row form-row mt-3">
                    <input type="hidden" id="idSP" class="form-control" readonly>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Tên sản phẩm <span class="required"> *</span></label>
                            <input type="text" id="tenSp" class="form-control" placeholder="Nhập tên sản phẩm">
                            <span class="dz-error-message text-danger" id="errorTen">Vui lòng nhập tên sản phẩm</span>

                        </div>
                    </div>

                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Giá <span class="required"> *</span></label>
                            <input type="text" id="giaSp"  class="form-control" placeholder="Nhập giá sản phẩm">
                            <span class="dz-error-message text-danger" id="errorGia">Vui lòng nhập giá sản phẩm</span>

                        </div>
                    </div>
                   
                    <div class="col-12 col-sm-6">
                        <label>Trạng thái</label>
                        <div class="status-toggle d-flex ">
                            <input type="checkbox" id="status" class="check">
                            <label for="status" style="height:35px ; width:60px" class="checktoggle">checkbox</label>
                        </div>
                    </div>
                </div>
                <button type="submit" onclick="EditOrCreate()" id="btnNomal" class="btn btn-primary btn-block w-100 mt-4">Lưu</button>
                <button type="button" id="btnLoading" class="btn btn-primary btn-block w-100 mt-4" style="display:none"><span class="spinner-border spinner-border-sm me-2" role="status"></span>Lưu</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="delete_modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <div class="form-content p-2" >
                    <h4 class="modal-title">Xác nhận xóa</h4>
                    <input id="idXoa" type="hidden" />
                    <p class="mb-4">Bạn có muốn xóa trận đấu này ?</p>
                    <button type="button" class="btn btn-primary" id="btnXoa">Xóa </button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

