@{
    Layout = "_layoutCommon";
	ViewData["Title"] = "Sản phẩm";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="~/home_assets/css/sanpham.css" rel="stylesheet" />
<style>
    /* Custom CSS */
    .category ul li{
        height:50px ;
		line-height:50px;
    }

    .category ul li:hover {
            background-color: #e86565;
            border-radius:10px;
            
    }

        .category ul li:hover  a{
           color:white ;
        }

	.category_product.active {
		background-color: #e86565;
		border-radius: 10px;
	}

	.category_product.active a{
		color:white ;
	}
    .category ul li a{
       font-size:19px ;
       color:black;
       margin-left:10px;
    }

    .filter-item span label input{
        margin-left:15px ;
        margin-top:10px;
    }

    .filter-item span label input:first-child {
        margin-left: 15px;
        margin-top: 20px;
    }

    .filter-item span label {
       font-size:19px ;
       font-weight:300 !important;
    }

    .filter-item span label:hover {
            color: #e86565 ;
    }

	.btn {
		color: #c90000 !important;
		margin-left:5px
	}

	.btn:hover {
			color: white !important;
			background-color: #c90000 !important;
	}
	.active{
		color: white !important;
		background-color: #c90000 !important;
	}


</style>
