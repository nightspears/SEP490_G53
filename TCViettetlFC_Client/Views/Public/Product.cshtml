    <div class=content></div>
    <div class=innerbanner><h2 class=bannerHeadline style="font-size:65px">Sản <span>phẩm</span></h2></div>
</div> *@
<div style="padding-top:70px">
	<div class="spacewithtop" style="padding-top:7.5%"></div>
    <h2 style="padding-bottom:50px" class="heading small">Quần áo đá bóng chính hãng <span>Viettel Shop</span></h2>

</div>

<div class="container my-5 mt-5" style="padding:50px 0">
    <div class="d-flex">
        <!-- Left Column: Filters Section -->
        <div class="col-md-3" style="margin-bottom:20px">
            <div class="filter-section">
                <div class="mb-3">
                    <label for="search" class="form-label" style="font-size:25px;font-weight:600">Tìm kiếm</label>
					<input type="text" onchange="toggleFilter(this)" id="search" class="form-control" placeholder="Tìm kiếm tên sản phẩm...">
                </div>

                
                <div class="mb-3" style="padding:10px 0">
                    <label for="category" class="form-label" style="font-size:25px;font-weight:600">Danh mục</label>
                    <div class="category">
                        <ul id="lstCate">
                           
                        </ul>
                       
                    </div>
                </div>

                <div class="mb-3">
					<aside class="aside-item filter-price">
                        <div class="aside-title" style="font-size:25px;font-weight:600">
							Giá sản phẩm
						</div>
						<div class="aside-content filter-group">
							<input type="hidden" style="display :none" id="idCategory" value="0"  />
							<ul>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-duoi-100-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-duoi-100-000d" onchange="toggleFilter(this);" data-text="Dưới 100.000đ" value="Price lt 100000" data-operator="OR">
											<i class="fa"></i>
											Giá dưới 100.000đ
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-100-000d-200-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-100-000d-200-000d" onchange="toggleFilter(this)"  data-text="100.000đ - 200.000đ" value="Price ge 100000 and Price le 200000" data-operator="OR">
											<i class="fa"></i>
											100.000đ - 200.000đ
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-200-000d-300-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-200-000d-300-000d" onchange="toggleFilter(this)"  data-text="200.000đ - 300.000đ" value="Price ge 200000 and Price le 300000" data-operator="OR">
											<i class="fa"></i>
											200.000đ - 300.000đ
										</label>
									</span>
								</li>

								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-300-000d-500-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-300-000d-500-000d" onchange="toggleFilter(this)"  data-text="300.000đ - 500.000đ" value="Price ge 300000 and Price le 500000" data-operator="OR">
											<i class="fa"></i>
											300.000đ - 500.000đ
										</label>
									</span>
								</li>

								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-500-000d-1-000-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-500-000d-1-000-000d" onchange="toggleFilter(this)"  data-text="500.000đ - 1.000.000đ" value="Price ge 500000 and Price le 1000000" data-operator="OR">
											<i class="fa"></i>
											500.000đ - 1.000.000đ
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="filter-tren1-000-000d">
											<input type="checkbox" class="filter-checkbox" id="filter-tren1-000-000d" onchange="toggleFilter(this)"  data-text="Trên 1.000.000đ" value="Price gt 1000000" data-operator="OR">
											<i class="fa"></i>
											Giá trên 1.000.000đ
										</label>
									</span>
								</li>



							</ul>
						</div>
					</aside>
                </div>
				<div class="mt-3"style="margin-top:15px">
					<aside class="aside-item filter-price">
						<div class="aside-title" style="font-size:25px;font-weight:600">
							Sắp xếp
						</div>
						<div class="aside-content filter-group">
							<ul>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="sort-hangMoi">
											<input type="radio" id="sort-hangMoi" onchange="toggleFilter(this)" class="SortProduct" value="&$filter=discoutPercent ne null" name="sortOption">
											Hàng giảm giá
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="sort-TenAZ">
											<input type="radio" id="sort-TenAZ" onchange="toggleFilter(this)" class="SortProduct" value="&$orderby=ProductName asc" name="sortOption">
											Tên A-Z
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="sort-TenZA">
											<input type="radio" id="sort-TenAZ" onchange="toggleFilter(this)" class="SortProduct" value="&$orderby=ProductName desc" name="sortOption">
										
											Tên Z-A
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="sort-giaThapCao">
											<input type="radio" id="sort-giaThapCao" onchange="toggleFilter(this)" class="SortProduct" value="&$orderby=Price asc" name="sortOption">
											
											Giá thấp đến cao
										</label>
									</span>
								</li>
								<li class="filter-item filter-item--check-box filter-item--green">
									<span>
										<label for="sort-giaCaoThap">
											<input type="radio" id="sort-giaCaoThap" onchange="toggleFilter(this)" class="SortProduct" value="&$orderby=Price desc" name="sortOption">
											
											Giá cao đến thấp
										</label>
									</span>
								</li>
							
							</ul>
						</div>
					</aside>
				</div>
            </div>
        </div>

        <!-- Right Column: Product Section -->
        <div class="col-md-9 d-flex flex-wrap" >
			<div class="col-md-12 d-flex flex-wrap" id="lstSanPham">
			</div>
			<div class="col-md-12 d-flex flex-wrap" id="paging" style="display:none" >
				<div class="pagination-container text-right mt-4" id="page-buttons">
			@* 
					<button class="btn btn-outline-primary page-btn" data-page="1">1</button>
					<button class="btn btn-outline-primary page-btn" data-page="2">2</button>
					<button class="btn btn-outline-primary page-btn" data-page="3">3</button> *@
				
				</div>
			</div>

        </div>




    </div>
</div>

<script src="~/admin_assets/js/jquery-3.6.0.min.js"></script>

<script src="~/home_assets/js/sanpham.js"></script>
