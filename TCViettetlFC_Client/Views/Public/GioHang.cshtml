@{
    Layout = "_layoutCommon";
}


<style>
    .cart-table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #333;
        min-width: 750px;
        overflow: auto
    }

        .cart-table th, .cart-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .cart-table th {
            background-color: #f2f2f2;
            color: #555;
            font-weight: 600;
            text-transform: uppercase;
        }

        .cart-table tr:hover {
            background-color: #f9f9f9;
        }

    .item-info {
        display: flex;
        align-items: center;
    }

    .ImgProduct {
        width: 40px;
        height: 40px;
        object-fit: cover;
        margin-right: 10px;
        border-radius: 8px;
    }

    .quantity {
        align-items: center;
        gap: 10px;
    }

    .quantity-btn {
        padding: 5px 10px;
        background-color: #fff;
        color: black;
        font-size: 18px;
        border: 1px solid black;
        ;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .quantity-btn:hover {
            background-color: #e55b5b;
        }

    .quantity-input {
        width: 40px;
        text-align: center;
        font-size: 18px;
        border: 1px solid #ddd;
        padding: 5px;
        border-radius: 5px;
        background-color: #fff;
        color: #333;
        font-weight: bold;
        outline: none;
        border: none;
    }

    h5 {
        font-size: 19px;
    }

        h5 span {
            font-weight: normal
        }
    /* Custom scrollbar for WebKit browsers (Chrome, Safari, etc.) */
    .table-responsive::-webkit-scrollbar {
        height: 6px; /* Height of horizontal scrollbar */
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #888; /* Color of the scrollbar thumb */
        border-radius: 10px; /* Make the scrollbar thumb rounder */
    }

    .table-responsive::-webkit-scrollbar-track {
        background-color: #f1f1f1; /* Background of the scrollbar track */
    }

    /* Optional: Hover effect to highlight the scrollbar */
    .table-responsive::-webkit-scrollbar-thumb:hover {
        background-color: #555; /* Darker color on hover */
    }

    .product-info {
        display: flex;
        flex-direction: column; /* Sắp xếp các span theo chiều dọc */
        justify-content: center; /* Để căn giữa các span theo chiều dọc */
        padding-left: 10px; /* Tạo khoảng cách giữa ảnh và thông tin sản phẩm */
    }

    .ImgProduct {
        max-width: 100px; /* Điều chỉnh kích thước ảnh */
        height: auto;
    }

    .product-name {
        white-space: nowrap; /* Ngăn không cho nội dung xuống dòng */
        overflow: hidden; /* Ẩn nội dung tràn ra ngoài */
        text-overflow: ellipsis; /* Hiển thị dấu "..." khi nội dung quá dài */
        display: block; /* Để nó hoạt động chính xác trên thẻ span */
        max-width: 200px; /* Đặt chiều rộng tối đa cho sản phẩm */
    }

   

    .product-info {
        display: block;
        word-wrap: break-word;
    }

    .ImgProduct {
        max-width: 100px;
        height: auto;
    }

</style>

<link href="~/home_assets/css/giohang.css" rel="stylesheet" />

<div class="spacewithtop" style="padding-top:7.5%"></div>

<div style="padding-top:70px">
    <h2 style="padding-bottom:50px" class="heading small">Quần áo đá bóng chính hãng <span>Viettel Shop</span></h2>

</div>
<div class="container my-5 mt-5" style="padding:50px 0">
    <div class="d-flex">
        <div class="col-md-8 d-flex flex-wrap mb-4" id="lstSanPham">
            <div class="table-responsive" style=" box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;">
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="0" onchange="CheckAll(this)">
                                </div>
                            </th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Tổng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="bodyData">

                    </tbody>
                </table>
                <div id="noDataMessage" style="display: none; text-align: center;">
                    <img src="https://img.freepik.com/premium-vector/no-data-concept-illustration_86047-488.jpg?w=2000" alt="No products" style="width: 250px;">
                </div>
            </div>


        </div>

        <!-- Left Column: Filters Section -->

        <div class="col-md-4">
            <div class="filter-section" style=" box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2) !important;">
                <h5>Tổng : <span id="totalPrice" class="price" style="font-size:18px;color:orangered">0 ₫</span> </h5>
                <h5>Phí VAT (5%) : <span id="VAT_Price" class="price" style="font-size:18px;color:orangered">0 ₫</span></h5>
                <h5>Tổng hóa đơn : <span id="totalBill" class="price" style="font-size:18px;color:orangered">0 ₫</span></h5>
                <button onclick="checkOut()" class="btn btn-success w-100" style="margin-top: 10px">Thanh toán</button>
            </div>
        </div>
        <div class="col-sm-12" style="margin-top: 20px;">
            <div style="display: table; width: 100%;">
                <h4 style="display: table-cell; text-align: left; margin: 0;">Có thể bạn thích</h4>
                <a style="display: table-cell; text-align: right; font-size: 17px; color: #b81e20;" href="/public/sanpham">Xem tất cả >></a>
            </div>
        </div>


        <div class="col-md-12" style="margin-top:20px" id="lstLienQuan">
           
        </div>
    </div>
</div>
<script src="~/admin_assets/js/jquery-3.6.0.min.js"></script>
<script src="~/home_assets/js/giohang.js"></script>
<script>
    function CheckAll(item) {
        var isChecked = $(item).is(':checked');
        var checkboxes = $(item).closest('table').find('.form-check-input');
        checkboxes.prop('checked', isChecked);
    };
</script>