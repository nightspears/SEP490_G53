@model TCViettetlFC_Client.Models.CheckoutModel
@{
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Summary</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2>Order Summary</h2>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>City:</strong> @Model.City</p>
        <p><strong>District:</strong> @Model.District</p>
        <p><strong>Notes:</strong> @Model.Notes</p>
        <p><strong>Shipping code:</strong> @Model.SelectedShipping</p>

        <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary">Back to Checkout</a>
    </div>
</body>
</html>