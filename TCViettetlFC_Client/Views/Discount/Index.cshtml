<div class="modal fade" id="modalEditorCreate" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModal">Sửa danh mục sản phẩm</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row form-row mt-3">
                    <input type="hidden" id="idDiscount" class="form-control" readonly>
                    <div class="col-12 col-sm-12">
                        <div class="form-group">
                            <label>Mã giảm giá <span class="required"> *</span></label>
                            <input type="text" id="maGiamGia" class="form-control">
                            <span class="dz-error-message text-danger" id="errorMa">Vui lòng nhập tên mã giảm giá</span>

                        </div>
                    </div>
                    <div class="col-12 col-sm-12">
                        <div class="form-group">
                            <label>Số lượng giảm <span class="required"> *</span></label>
                            <input type="text" id="percent" max="100" class="form-control">
                            <span class="dz-error-message text-danger" id="errorPercent">Vui lòng nhập giá trị giảm giá</span>

                        </div>
                    </div>
                    <div class="col-12 col-sm-12">
                        <div class="form-group">
                            <label>Ngày bắt đầu <span class="required"> *</span></label>
                            <input type="date" id="startDate" class="form-control">
                            <span class="dz-error-message text-danger" id="errorStart">Vui lòng nhập ngày bắt đầu giảm giá</span>

                        </div>
                    </div>
                    <div class="col-12 col-sm-12">
                        <div class="form-group">
                            <label>Ngày kết thúc <span class="required"> *</span></label>
                            <input type="date" id="endDate" class="form-control">
                            <span class="dz-error-message text-danger" id="errorEnd">Vui lòng nhập ngày hết mã giảm giá</span>

                        </div>
                    </div>

                    <div class="col-12 col-sm-6">
                        <label>Trạng thái</label>
                        <div class="status-toggle d-flex ">
                            <input type="checkbox" id="status" class="check">
                            <label for="status" style="height:35px ; width:60px" class="checktoggle">checkbox</label>
                        </div>
                    </div>
                </div>
                <button type="submit" onclick="EditOrCreate()" id="btnNomal" class="btn btn-primary btn-block w-100 mt-4">Lưu</button>
                <button type="button" id="btnLoading" class="btn btn-primary btn-block w-100 mt-4" style="display:none"><span class="spinner-border spinner-border-sm me-2" role="status"></span>Lưu</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="delete_modal" aria-hidden="true" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-body">
                <div class="form-content p-2">
                    <h4 class="modal-title">Xác nhận xóa</h4>
                    <input id="idXoa" type="hidden" />
                    <p class="mb-4">Bạn có muốn xóa trận đấu này ?</p>
                    <button type="button" class="btn btn-primary" id="btnXoa">Xóa </button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

