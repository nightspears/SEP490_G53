@model ChangePasswordModel

<form method="post" asp-action="ChangePassword">
    <div>
        Old Password:
        <input type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div>
        New Password:
        <input type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <br />
    <div>
        Re-enter New Password:
        <input type="password" asp-for="ReNewPassword" />
        <span asp-validation-for="ReNewPassword" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Submit" />
</form>
<h1>Result: @ViewBag.Message</h1>
