@model ChangePasswordModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    var roleId = Context.Request.Cookies["RoleId"];
    Layout = roleId == "1" ? "_LayoutAdmin" : roleId == "2" ?"_LayoutAdminReal":null;
}



<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3>Đổi mật khẩu</h3>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-10 col-lg-6">
                            @if (TempData["Notification"] != null)
                            {
                                var notificationType = TempData["NotificationType"] as string;
                                var alertClass = notificationType == "success" ? "alert alert-success" : "alert alert-danger";
                                <div class="@alertClass">
                                    @TempData["Notification"]
                                </div>
                            }
                            <form method="post" asp-action="ChangePassword">
                                <div class="mb-3 row">
                                    <label for="OldPassword" class="col-sm-4 col-form-label">Mật khẩu cũ:</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" asp-for="OldPassword" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="NewPassword" class="col-sm-4 col-form-label">Mật khẩu mới:</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" asp-for="NewPassword" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="ReNewPassword" class="col-sm-4 col-form-label">Nhập lại mật khẩu mới:</label>
                                    <div class="col-sm-8">
                                        <input type="password" class="form-control" asp-for="ReNewPassword" />
                                        <span asp-validation-for="ReNewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-8 offset-sm-4">
                                        <input type="submit" class="btn btn-primary" value="Đặt lại" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
