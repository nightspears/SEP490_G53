@model ChangePasswordModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    var roleId = Context.Request.Cookies["RoleId"];
    Layout = roleId == "1" ? "_LayoutAdmin" : roleId == "2" ? "_LayoutAdminReal" : roleId == "3" ?"_LayoutEntry":null;
}



<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3>Đổi mật khẩu</h3>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            @if (TempData["Notification"] != null)
                            {
                                var notificationType = TempData["NotificationType"] as string;
                                var alertClass = notificationType == "success" ? "alert alert-success" : "alert alert-danger";
                                <div class="@alertClass">
                                    @TempData["Notification"]
                                </div>
                            }
                           
                            <form method="post" asp-action="ChangePassword">
                                <div class="mb-3 row">
                                    
                                        <input type="password" class="form-control" placeholder="Mật khẩu cũ" asp-for="OldPassword" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">
                                        <input type="password" class="form-control" placeholder="Mật khẩu mới" asp-for="NewPassword" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3 row">                                   
                                        <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" asp-for="ReNewPassword" />
                                        <span asp-validation-for="ReNewPassword" class="text-danger"></span>
                                </div>
                               
                                        <input type="submit" class="btn btn-primary" value="Đổi mật khẩu" />
                                    
                            </form>
                            @if (roleId == "3")
                            {
                                <button style="background-color:grey; margin-top:1%;" class="btn btn-primary" onclick="window.location.href='/entry';">Quay lại</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
