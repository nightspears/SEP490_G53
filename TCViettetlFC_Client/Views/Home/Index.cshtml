    <script>
        // lấy trận đầu 
        async function fetchMatchData() {
            try {
                const response = await fetch("https://localhost:5000/api/Matches/GetMatches");
                const matches = await response.json();

                //lấy trận đấu gần nhất
                const now = new Date();
                const upcomingMatches = matches
                    .filter(match => new Date(match.matchDate) > now)
                    .sort((a, b) => new Date(a.matchDate) - new Date(b.matchDate));

                if (upcomingMatches.length > 0) {
                    // Lấy trận đấu gần nhất
                    const nextMatch = upcomingMatches[0];

                    //logo đối thủ
                    document.getElementById("opponent-img").src = nextMatch.logoUrl;

                    //tên đối thủ
                    document.getElementById("opponent-name").textContent = nextMatch.opponentName;

                    //thời gian diễn ra trận đấu
                    const matchDate = new Date(nextMatch.matchDate);
                    const matchDateTime = `${matchDate.toLocaleDateString()} ${matchDate.toLocaleTimeString()}`;
                    document.getElementById("match-schedule").textContent = `Thời gian: ${matchDateTime}`;

                    //sân
                    document.getElementById("match-stadium").textContent = `Sân vận động: ${nextMatch.stadiumName}`;

                    // đếm ngược đến trận đấu
                    startCountdown(matchDate);
                    // Lấy 4 trận đấu tiếp 
                    const upcomingList = upcomingMatches.slice(1, 5);
                    displayUpcomingMatches(upcomingList);
                }
            } catch (error) {
                console.error("Error fetching match data:", error);
            }
        }
    
        // Hàm hiển thị trận đấu sắp tới
        function displayUpcomingMatches(matches) {
            const upcomingContainer = document.getElementById("upcoming-matches");
            upcomingContainer.innerHTML = "";

            matches.forEach((match, index) => {
                const matchDate = new Date(match.matchDate);
                const matchDateTime = `${matchDate.toLocaleDateString()} ${matchDate.toLocaleTimeString()}`;

                //html cho từng trận một 
                const matchHtml = `
                <li>
                    <a>
                        <ul class="t_info match_info01 headline01 clearfix">
                            <li>
                                ${index+1}
                            </li>
                            <li>
                                <div class="headline01 clearfix">
                                    <span>CLB Thể Công</span>
                                    <span class="vs">vs</span>
                                        <span>${match.opponentName}</span>
                                </div>
                                <div class="paragraph02 clearfix">
                                        <span>${matchDateTime}</span>
                                </div>
                            </li>
                        </ul>
                    </a>
                </li>
                `;

                //thêm trận trên vào danh sách
                upcomingContainer.innerHTML += matchHtml;
            });
        }
    
        // Hàm đếm ngược đến trận đấu
        function startCountdown(matchDate) {
            const countdownElement = document.getElementById("countdown");
            const matchStatusElement = document.getElementById("matchStatus");

            function updateCountdown() {
                const now = new Date().getTime();
                const timeRemaining = matchDate - now;

                if (timeRemaining <= 0) {
                    countdownElement.style.display = "none";
                    matchStatusElement.style.display = "block";
                    clearInterval(interval);
                } else {
                    const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

                    document.getElementById("days").textContent = days.toString().padStart(2, '0');
                    document.getElementById("hours").textContent = hours.toString().padStart(2, '0');
                    document.getElementById("minutes").textContent = minutes.toString().padStart(2, '0');
                    document.getElementById("seconds").textContent = seconds.toString().padStart(2, '0');
                }
            }

            const interval = setInterval(updateCountdown, 1000);
        }
    
