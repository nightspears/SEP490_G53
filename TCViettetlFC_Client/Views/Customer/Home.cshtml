<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Preview Modal</title>
    <style>
        /* Button styling */
        #openModalBtn {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

        /* Modal styling */
        .modal {
            display: none; /* Hidden by default */
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            position: relative;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 500px;
        }

        /* Close button style */
        .close {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 24px;
            cursor: pointer;
        }

        /* Image container styling */
        .image-container {
            position: relative;
            width: 100%;
            margin-top: 20px;
        }

            .image-container img {
                width: 100%;
            }

        /* Overlay for name and number */
        .text-overlay {
            position: absolute;
            color: black;
            font-size: 18px;
            font-weight: bold;
        }

        #shirtNameOverlay {
            top: 25%; /* Adjust to position over the upper area of the shirt */
            left: 50%;
            transform: translateX(-50%);
            font-size: 18px;
        }

        #shirtNumberOverlay {
            top: 30%; /* Adjust to position in the center or lower area */
            left: 50%;
            transform: translateX(-50%);
            font-size: 85px;
        }
    </style>
</head>
<body>
    <!-- Button to open modal -->
    <button id="openModalBtn">Preview Shirt</button>

    <!-- Modal structure -->
    <div id="previewModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Shirt Preview</h2>

            <!-- Image and text overlay -->
            <div class="image-container">
                <img src="https://product.hstatic.net/1000312752/product/atls185-1__2__3c5ed488e17f4abe98ac13d13b51feab.jpg" alt="Shirt Image">
                <div class="text-overlay" id="shirtNameOverlay">Tên cầu thủ</div>
                <div class="text-overlay" id="shirtNumberOverlay">10</div>
            </div>

            <!-- Inputs for shirt name and number -->
            <input type="text" placeholder="Enter Shirt Name" onchange="updateText('shirtNameOverlay', this.value)">
            <input type="number" placeholder="Enter Shirt Number" onchange="updateText('shirtNumberOverlay', this.value)">
        </div>
    </div>

    <script>
        document.getElementById("openModalBtn").onclick = function () {
            document.getElementById("previewModal").style.display = "flex";
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById("previewModal").style.display = "none";
        }

        // Function to update text overlays
        function updateText(elementId, text) {
            document.getElementById(elementId).textContent = text;
        }

        // Close modal if clicked outside of modal content
        window.onclick = function (event) {
            if (event.target == document.getElementById("previewModal")) {
                closeModal();
            }
        }
    </script>
</body>
</html>
