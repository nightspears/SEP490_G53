@model CustomerForgotPassModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu mới";
}
<div class="main-wrapper">
    <style>
        .bg-pattern-style2 {
            background-size: cover;
            background-position: center;
            background-position-y: top;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
    </style>
    <div class="bg-pattern-style2" style="background-image: url('/image/big_bacground.jpg');">
        <div class="content">
            <div class="account-content">
                <div class="account-box" style="opacity:97%;background-color:#ffb8b8d1">
                    <div class="login-right">
                        <div class="login-header">
                            <a href="/"><h3><span>ViettelFC</span></h3></a>
                            <p class="text-muted">Đặt lại mật khẩu của bạn</p>
                        </div>
                        <form action="ResetPassword" method="post">
                            <div class="form-group">
                                <label class="form-control-label">Mật khẩu mới</label>
                                <input id="password" type="password" class="form-control" asp-for="Password">
                                <!-- Validation message for Password -->
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Nhập lại mật khẩu mới</label>
                                <input id="password-confirm" type="password" class="form-control" asp-for="RePassword">
                                <!-- Validation message for RePassword -->
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>

                            <button class="btn btn-primary login-btn" type="submit">Đặt lại mật khẩu</button>
                            @if (ViewBag.Error != null)
                            {
                                <h4 style="color:red;">@ViewBag.Error</h4>
                            }
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>