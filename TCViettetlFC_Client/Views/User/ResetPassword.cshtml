@model UserResetPassModel
@{
    ViewData["Title"] = "Xác nhận email";
}
<div class="main-wrapper login-body">
    <div class="login-wrapper">
        <div class="container">
            <div class="loginbox">
                <div class="login-left" style="background:red;">
                    <img class="img-fluid" src="~/assets/img/tcvtfc.png" alt="Logo">
                </div>
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>Đặt lại mật khẩu của bạn</h1>
                        <form asp-action="ResetPassword" method="post">
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Mật khẩu mới" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Nhập lại mật khẩu mới" asp-for="RePassword">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block w-100" type="submit">Xác nhận</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

