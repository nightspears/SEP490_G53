@model UserProfileModel
@{
	var roleId = Context.Request.Cookies["RoleId"];
	Layout = roleId == "1" ? "_LayoutAdmin" : roleId == "2" ? "_LayoutAdminReal" : roleId == "3" ? "_LayoutEntry" : null;
	ViewData["Title"] = "Cập nhật hồ sơ";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">

	<div style="width: 100%; max-width: 500px; margin-top: 20px; padding: 20px; border: 1px solid #ddd; border-radius: 8px;">
		<h4>Cập nhật hồ sơ</h4>
		<form method="post" asp-action="UpdateProfile">
			<div class="form-group">
				<label class="form-control-label">Số điện thoại</label>
				<input id="password" type="tel" class="form-control" asp-for="phone" value="@Model.phone">
				<span asp-validation-for="phone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="form-control-label">Tên đầy đủ</label>
				<input id="password-confirm" type="text" class="form-control" asp-for="fullName" value="@Model.fullName">
				<span asp-validation-for="fullName" class="text-danger"></span>
			</div>
			<div style="text-align:center;">
				<button style="background-color:greenyellow; color:white;" class="btn btn-primary login-btn" type="submit">Cập nhật</button>
			</div>
		</form>

		@if (ViewBag.Notify != null)
		{
			<h4 style="color:forestgreen; text-align:center;">@ViewBag.Notify</h4>
		}
	</div>
</div>
