@model List<VerifySupDto>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đồ đi kèm</title>
    <style>
        /* General reset */
body, html {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
}

/* Container styling */
.container {
    padding: 20px;
    background-color: #f8f9fa;
    text-align: center;
}

h1 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 20px;
}

/* Results grid */
.results {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

/* Card styling */
.result-card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    width: 300px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-align: left;
}

.result-card:hover {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

/* Image styling */
.item-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

/* Details section */
.item-details {
    padding: 15px;
}

.item-details h2 {
    font-size: 1.5rem;
    margin: 0 0 10px;
    color: #333;
}

.item-details p {
    margin: 5px 0;
    font-size: 1rem;
    color: #555;
}

/* Responsive design */
@@media (max-width: 768px) {
    .result-card {
        width: 100%;
    }

    h1 {
        font-size: 1.5rem;
    }
}

    </style>
</head>
<body>
    <div class="container">
        <h1>Đồ đi kèm đã đặt</h1>
        <div class="results">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="result-card">
                        <img src="@item.imageurl" alt="@item.itemName" class="item-image" />
                        <div class="item-details">
                            <h2>@item.itemName</h2>
                            <p>Giá tiền: @item.price.Value.ToString("#,0") đ</p>
                            <p style="color:red;">Số lượng: @item.quantity</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>@ViewBag.Result</p>
            }
        </div>
    </div>
</body>
</html>