@{
    var result = ViewBag.Result as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Soát vé</title>
    <style>
        /* General reset */
        body, html {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            text-align: center;
        }

        /* Container styling */
        .result-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        /* Symbol container */
        .symbol-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

        /* Icon styling */
        .symbol-icon {
            width: 100px;
            height: 100px;
        }

        /* Result text styling */
        .result-text {
            font-size: 2rem;
            margin-top: 10px;
            font-weight: bold;
        }

        /* Colors based on validity */
        .valid .result-text {
            color: green;
        }

        .invalid .result-text {
            color: red;
        }

    </style>
</head>
<body>
    <div class="result-container">
        @if (result == "Valid")
        {
            <div class="symbol-container valid">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="symbol-icon">
                    <path d="M10 50 L40 80 L90 10" stroke="green" stroke-width="10" fill="none" />
                </svg>
                <h1 class="result-text">Hợp lệ</h1>
            </div>
        }
        else
        {
            <div class="symbol-container invalid">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="symbol-icon">
                    <line x1="10" y1="10" x2="90" y2="90" stroke="red" stroke-width="10" />
                    <line x1="90" y1="10" x2="10" y2="90" stroke="red" stroke-width="10" />
                </svg>
                <h1 class="result-text">Không hợp lệ</h1>
            </div>
        }
    </div>
</body>
</html>
